<% if current_user %>
  <%=form_for [@post, Comment.new], remote: true do |f| %>
    <h4>Add A Comment </h4>
    <div>
      <%= form_group_tag(post.errors[:comment]) do %>
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Add a comment" %>
      <%end%>
    </div>

    <div class="form-group">
      <%= f.submit "Create Comment", class: 'btn btn-success' %>
    </div>
  <%end%>
<%end%>